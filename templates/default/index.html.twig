{% extends 'base.html.twig' %}

{% block title %}Bienvenue - Pricing{% endblock %}

{% block stylesheets %}{% endblock %}

{% block titlePage %}
    <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
        <h3 class="display-4">Bienvenue</h3>
        <p class="lead">Cet outil a pour objectif de placer un produit face à la concurrence, il utilise pour ça un algorithme respectant les exigences demandées.</p>
    </div>
{% endblock %}

{% block body %}
    
    <div class="card-deck mb-12 text-center">
    
        <div class="card mb-4 box-shadow ">
            <div class="card-header">
                <h5 class="my-0 font-weight-normal"><i class="fas fa-rocket"></i> Articles mis en concurrence</h5>
            </div>
            <div class="card-body">
                <ul class="list-unstyled mt-3 mb-4">
                    {% if articlesVendeurs| length > 0 %}
                        {% set compteur = 1 %}
                        {% for articleVend in articlesVendeurs %}
                            <li><b>{{ articleVend.article.libelle }}</b> positionné à <b>{{ articleVend.prix }} € </b>({{ articleVend.etat.intitule }})</li>
                            {% set compteur = compteur + 1 %}
                        {% endfor %}
                    {% else %}
                        <li>Aucune article concurrencé.</li>
                    {% endif %}
                </ul>
                <a type="button" id="bouttonAccueil" href="{{ path('articles_vendeur_list') }}" class="btn btn-lg btn-block btn-primary">
                    <i class="fas fa-list"></i> Tous les articles
                </a>
            </div>
        </div>

        <div class="card mb-4 box-shadow">
            <div class="card-header">
                <h5 class="my-0 font-weight-normal"><i class="fas fa-chart-bar"></i> Meilleures offres des concurrents</h5>
            </div>
            <div class="card-body">                
                <ul class="list-unstyled mt-3 mb-4">
                    <li>TODO : Offre 1</li>
                    <li>TODO : Offre 2</li>
                    <li>TODO : Offre 3</li>
                    <li>TODO : Offre 4</li>
                </ul>
                <button type="button" class="btn btn-lg btn-block btn-primary"><i class="fas fa-list"></i> Toutes les offres</button>
            </div>
        </div>

    </div>
        
{% endblock %}

{% block javascripts %}
    <style>
        #bouttonAccueil {
            position: absolute;
            bottom: 15px;
            width: 92%;
        }
    </style>
{% endblock %}


